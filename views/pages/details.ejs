<%- include("../partials/header.ejs") %> 
<table class="container">
    <thead>
        <tr>
            <th>S/N</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    
    <% for(let index = 0; index<userDetails.length; index++){ %>
        <tbody>
          <tr>
            <td><%= index+1 %> </td>
            <td> <%= userDetails[index].first_name %> </td>
            <td> <%= userDetails[index].last_name %> </td>
            <td> <%= userDetails[index].email %> </td>
            <td class="">
                <form action="/delete" method="post">
                    <input type="hidden" value="<%= userDetails[index]._id %>" name="id">
                    <button class="btn red"><i class="material-icons">delete</i></button>
                </form>

                <form action="/edit" method="post">
                    <input type="hidden" value="<%=userDetails[index]._id%>" name="id">
                    <button class="btn black"><i class="material-icons">edit</i></button>
                </form>
                
            </td>
          </tr>
        </tbody>
    <% } %> 
</table>
<%- include("../partials/footer.ejs") %> 