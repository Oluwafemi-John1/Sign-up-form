<%- include("../partials/header.ejs") %> 
<div class="container">
    <h1 class="header teal-text">Edit here</h1>
    <form action="/update", method="post">
        <div class="input-field col s6">
            <input id="first_name" value="<%=userDetails.first_name%>" type="text" class="validate" name="first_name" >
            <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
            <input id="last_name" type="text" value="<%=userDetails.last_name%>" class="validate" name="last_name">
            <input type="hidden" value="<%=userDetails._id%>" name="id">
            <label for="last_name">Last Name</label>
        </div>
        <div class="input-field col s6">
            <input id="email" type="email" value="<%=userDetails.email%>" class="validate" name="email">
            <label for="email">Email</label>
            <span class="helper-text" data-error="wrong" data-success="right">Must include @</span>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
        </button>
    </form>
</div>
<%- include("../partials/footer.ejs") %> 